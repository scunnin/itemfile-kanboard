<IfModule mod_rewrite.c>
    Options -MultiViews

    SetEnv HTTP_MOD_REWRITE On

    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [QSA,L]
</IfModule>

<FilesMatch "(kanboard|config.php|config.default.php)">
    <IfModule mod_version.c>
        <IfVersion >= 2.3>
            Require all denied
        </IfVersion>
        <IfVersion < 2.3>
            Order allow,deny
            Deny from all
        </IfVersion>
    </IfModule>

    <IfModule !mod_version.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>
